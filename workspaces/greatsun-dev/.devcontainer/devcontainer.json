{
    "name": "greatsun-dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "postCreateCommand": "pip install -r /workspaces/greatsun-dev/requirements.txt",
    "postStartCommand": "echo '#!/bin/bash\npython /workspaces/greatsun-dev/avatar/avatarUp.py \"$@\"' > /workspaces/greatsun-dev/avatar/avatar up && chmod +x /workspaces/greatsun-dev/avatar/avatar",
    "postAttachCommand": "source ~/.bashrc",
    "remoteUser": "vscode"
}