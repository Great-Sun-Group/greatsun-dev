{
    "name": "Credex Dev Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "saoudrizwan.claude-dev"
            ]
        }
    },
    "forwardPorts": [],
    "workspaceFolder": "/workspaces/credex-dev",
    "postCreateCommand": "chmod +x /workspaces/credex-dev/setup-submodules.sh && /workspaces/credex-dev/setup-submodules.sh",
    "remoteEnv": {
        "GH_PAT": "${localEnv:GH_PAT}"
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    }
}