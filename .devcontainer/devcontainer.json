{
    "name": "greatsun-dev avatar environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "saoudrizwan.claude-dev"
            ]
        }
    },
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt",
    "remoteUser": "vscode",
     "features": {
         "docker-in-docker": "latest"
     }
}