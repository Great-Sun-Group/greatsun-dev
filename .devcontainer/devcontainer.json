{
    "name": "greatsun-dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "postCreateCommand": "pip install -r /workspaces/greatsun-dev/requirements.txt",
    "postStartCommand": [
        "mkdir -p /usr/local/bin/avatar",
        "mv /workspaces/greatsun-dev/avatar/avatarUp.py /usr/local/bin/avatar/avatar",
        "chmod +x /usr/local/bin/avatar/avatar"
    ],
    "remoteEnv": {
        "PATH": "/usr/local/bin/avatar:${PATH}"
    },
    "remoteUser": "vscode"
}