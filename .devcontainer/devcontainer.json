{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "features": {
        "ghcr.io/devcontainers-contrib/features/poetry:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "echo 'export PATH=$PATH:/workspaces/greatsun-dev/avatar' >> ~/.bashrc && echo 'source ~/.bashrc' >> ~/.profile",
    "postStartCommand": "echo '#!/bin/bash\n\nif [ \"$1\" = \"up\" ]; then\n    python /workspaces/greatsun-dev/avatar/avatarUp.py\nelse\n    echo \"Unknown command. Use \\\"avatar up\\\" to start the avatar.\"\nfi' > /workspaces/greatsun-dev/avatar/avatar && chmod +x /workspaces/greatsun-dev/avatar/avatar",
    "postAttachCommand": "source ~/.profile"
}