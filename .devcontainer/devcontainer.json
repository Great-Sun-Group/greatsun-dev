{
    "name": "Greatsun Dev Environment",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && /usr/local/bin/startup.sh && echo 'source ~/.bashrc' >> ~/.bashrc",
    "remoteUser": "vscode"
}